<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#CBD0D3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/pic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audi R8"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It is a mid-engine, two-seater sports car with a powerful V10 engine and all-wheel drive. The Audi R8 has been in production since 2006 and is considered to be one of the best handling supercars on the market."
        android:textSize="18sp"
        android:layout_marginHorizontal="16dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Screenshot"
        android:textSize="18sp"
        android:id="@+id/take_ss_button"
        android:backgroundTint="#F4511E"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="16dp"
        />

</LinearLayout>